{% extends "layout.njk" %}

{% block head %}
    <head>
        <title>Confecção de Contrato - Credmil</title>
        <link rel="stylesheet" href="/css/banco.css"/>
        <link rel="shortcut icon" href="/img/credmil_icone.ico" type="image/x-icon"/>
    </head>
{% endblock %}

{% block body %}
    <body>
        <header>
            <div class="logo">
                <a href="/banco"><img src="/img/credmil_logo.png" alt="Logo Credmil"/></a>
            </div>
            <div class="nome">Marcos Silva</div>
            <div class="info">
                <span>ms</span>
            </div>
            <div class="sair">
                <a href="/login">Sair</a>
            </div>
        </header>

        <div class="conteudo">
            <div class="menuLateral">
                <a href="/banco/selecionar-cliente">Selecionar Cliente</a>
                <a href="/banco/central-documentos">Central de Documentos</a>
                <a href="/banco/controle-financiamento">Controle de Financiamento</a>
                <a href="/banco/confeccao-contrato">Confecção de Contrato</a>
            </div>
            <div class="infoMenu">
                <div class="conteudoConfeccaoContrato">
                    <h1>Confecção do Contrato</h1>
                    <p>Após confeccionar o contrato, anexar nesta tela e notificar o cliente.</p>
                    <div class="button">
                        <div class="button">
                            <button type="submit">Anexar Contrato</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <footer>
            <p>&#169; Copyright Credmil</p>
        </footer>

        <script src="/js/scripts.js"></script>
    </body>
{% endblock %}