{% extends "layout.njk" %}

{% block head %}
    <head>
        <title>Controle de Financiamento - Credmil</title>
        <link rel="stylesheet" href="/css/banco.css"/>
        <link rel="shortcut icon" href="/img/credmil_icone.ico" type="image/x-icon"/>
    </head>
{% endblock %}

{% block body %}
    <body>
        <header>
            <div class="logo">
                <a href="/banco"><img src="/img/credmil_logo.png" alt="Logo Credmil"/></a>
            </div>
            <div class="nome">Marcos Silva</div>
            <div class="info">
                <span>ms</span>
            </div>
            <div class="sair">
                <a href="/login">Sair</a>
            </div>
        </header>

        <div class="conteudo">
            <div class="menuLateral">
                <a href="/banco/selecionar-cliente">Selecionar Cliente</a>
                <a href="/banco/central-documentos">Central de Documentos</a>
                <a href="/banco/confeccao-contrato">Confecção de Contrato</a>
                <a href="/banco/controle-financiamento">Controle de Financiamento</a>
            </div>
            <div class="infoMenu">
                <div class="conteudoControleFinanciamento">
                    <h1>Acompanhar Financiamento</h1>
                    <p>Em acompanhar financiamento, você controlará o status de andamento do financimento;</p>
                    <p id="texto2">
                        <b>Status:</b>
                    </p>
                    <div class="button">
                        <button id="aprovado" type="submit">Aprovado</button>
                        <button id="emProcessamento" type="submit">Em Processamento</button>
                        <button id="reprovado" type="submit">Reprovado</button>
                    </div>
                </div>
            </div>
        </div>

        <footer>
            <p>&#169; Copyright Credmil</p>
        </footer>

        <script src="/js/scripts.js"></script>
    </body>
{% endblock %}