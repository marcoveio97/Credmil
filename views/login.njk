{% extends "layout.njk" %}

{% block head %}
  <head>
    <title>Login - Credmil</title>
    <link rel="stylesheet" href="css/login.css"/>
    <link rel="shortcut icon" href="img/credmil_icone.ico" type="image/x-icon"/>
  </head>
{% endblock %}

{% block body %}
  <body>
    <div class="container">
      <div class="primaria">
        <img src="img/CredMil_logo2.png" alt="Logo Credmil"/>
      </div>
      <form method="post" action="/cliente">
        <div class="secundaria">
          <h3>Welcome!</h3>
          <div class="email">
            <span>E-mail:</span>
            <input type="email" name="email" placeholder="Digite aqui seu e-mail..."/>
          </div>
          <div class="senha">
            <span>Senha:</span>
            <input type="password" name="senha" placeholder="Digite aqui sua senha..."/>
          </div>
          <div class="botao">
            <button type="submit">Login</button>
          </div>
          <div class="links">
            <a href="/cadastre-se">Cadastre-se</a>
            <span>|</span>
            <a href="/esqueci-senha">Esqueci a senha</a>
          </div>
          <p>&#169; Copyright Credmil</p>
        </div>
      </form>
    </div>
  </body>
{% endblock %}